<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/rangebar"
    android:id="@+id/card1"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@drawable/default_image"
            android:id="@+id/HisImage"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HisTitle"
            android:text="Title of the ad"
            android:layout_below="@+id/HisImage"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HisStatus"
            android:text="Title of the ad"
            android:layout_below="@+id/HisTitle"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HisRent"
            android:text="Title of the ad"
            android:layout_below="@+id/HisStatus"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Details"
            android:id="@+id/ownerDetails"
            android:layout_below="@+id/HisTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/HisRemove"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>