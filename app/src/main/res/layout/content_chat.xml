<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rentit.priyath.rentitlayout.chatActivity"
    tools:showIn="@layout/app_bar_chat">
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/chatcard"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_image"
                android:id="@+id/profpic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profpic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/user"
                android:textColor="#000000"
                android:textSize="25dp"
                android:text="User 1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profpic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:layout_below="@+id/user"
                android:text="Title of the Item"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/chatcard2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/chatcard"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_image"
                android:id="@+id/profpic2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profpic2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/user2"
                android:textColor="#000000"
                android:textSize="25dp"
                android:text="User 2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profpic2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:layout_below="@+id/user2"
                android:text="Title of the Item"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>
